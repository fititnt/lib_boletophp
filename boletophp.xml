<?xml version="1.0" encoding="UTF-8" ?>
<extension 
    type="library"
    version="2.5" 
    method="upgrade"
    >
    <!-- Name of folder inside of /libraries -->
    <libraryname>boletophp</libraryname>
    <!-- Name of library -->
    <name>LIB_BOLETOPHP</name>
    <!-- Description of library -->
    <description>LIB_BOLETOPHP_DESCRIPTION</description>
    <creationDate>2012-02-18</creationDate>
    <author>Emerson Rocha Luiz</author>
    <authorEmail>emerson at webdesign.eng.br</authorEmail>
    <authorUrl>http://fititnt.org</authorUrl>
    <copyright>Copyright (C) 2011 Webdesign Assessoria em Tecniligia da Informacao. All rights reserved.</copyright>
    <license>GNU General Public License version 2. See license.txt</license>
    <version>1.0RC</version>
	<!--
    <packagerurl>{packagerurl}</packagerurl>
    URL for look for updates
    <updateservers>{updateservers}</updateservers>        
    -->
    <files>
        <!-- Tag 'file' add a single file -->
        <file>boletophp.php</file>
        <file>boletophp.xml</file>
        <!--<file>license.txt</file>-->
        <file>loader.php</file>
        <file>readme.markdown</file>
        <!-- Tag 'folder' add a entire folder and all inside -->
        <folder>boletophp</folder>
        <!-- The 'language folder is not really need, but help on development -->
        <folder>language</folder>
    </files>
        <languages folder="language">
            <language tag="en-GB">en-GB/en-GB.lib_boletophp.ini</language>
            <language tag="en-GB">en-GB/en-GB.lib_boletophp.sys.ini</language>
        </languages>
</extension>
